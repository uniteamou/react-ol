{
  "name": "@uniteamou/react-ol",
  "version": "0.0.0",
  "description": "A lightweight React wrapper for OpenLayers — build interactive maps declaratively using components and hooks.",
  "type": "module",
  "types": "./lib/index.d.ts",
  "main": "./lib/index.js",
  "files": ["lib/**/*"],
  "release": {
    "branches": ["main"],
    "dryRun": true,
    "plugins": [
      [
        "@semantic-release/npm",
        { "npmPublish": false }
      ]
    ]
  },
  "publishConfig": { "access": "public" },
  "repository": {
    "type": "git",
    "url": "https://github.com/uniteamou/react-ol.git"
  },
  "keywords": ["openlayers", "react"],
  "author": "Uniteam OÜ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uniteamou/react-ol/issues"
  },
  "homepage": "https://github.com/uniteamou/react-ol#readme",
  "scripts": {
    "clean": "del-cli ./lib",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "test": "node --experimental-strip-types --test",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "del-cli": "^6.0.0",
    "semantic-release": "^24.2.1",
    "typescript": "^5.7.3",
    "@types/ol": "^7.0.0",
    "@types/ol-ext": "npm:@siedlerchr/types-ol-ext@^3.5.0"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18",
    "ol": "^9.2.4",
    "ol-ext": "^4.0.23"
  }
}
