{
  "name": "react-ol",
  "version": "0.0.1",
  "description": "A lightweight React wrapper for OpenLayers — build interactive maps declaratively using components and hooks.",
  "type": "module",
  "sideEffects": false,
  "main": "./lib/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uniteamou/react-ol.git"
  },
  "keywords": [
    "openlayers",
    "react"
  ],
  "author": "Uniteam OÜ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uniteamou/react-ol/issues"
  },
  "homepage": "https://github.com/uniteamou/react-ol#readme",
  "scripts": {
    "clean": "del-cli ./lib",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "semantic-release": "semantic-release",
    "lint": "eslint ./src/*",
    "format": "prettier ./src/* --write",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "@types/ol": "^7.0.0",
    "@types/ol-ext": "npm:@siedlerchr/types-ol-ext@^3.5.0",
    "@types/react": "^18",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.3.3",
    "semantic-release": "^24.2.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "ol": "^9.2.4",
    "ol-ext": "^4.0.23",
    "react": "^18",
    "react-dom": "^18"
  }
}
