{
  "name": "@uniteamou/react-ol",
  "version": "0.2.0",
  "description": "A lightweight React wrapper for OpenLayers — build interactive maps declaratively using components and hooks.",
  "type": "module",
  "sideEffects": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uniteamou/react-ol.git"
  },
  "keywords": [
    "openlayers",
    "react"
  ],
  "author": "Uniteam OÜ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uniteamou/react-ol/issues"
  },
  "homepage": "https://uniteamou.github.io/react-ol/dev/",
  "scripts": {
    "clean": "del-cli ./lib",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "semantic-release": "semantic-release",
    "lint": "eslint ./src/*",
    "format": "prettier ./src/* --write",
    "prepack": "npm run build",
    "docs:replace-tags": "node --loader ts-node/esm scripts/replace-tag-placeholders.ts",
    "docs:generate": "npm run docs:replace-tags && typedoc",
    "docs:clean": "del-cli ./docs_generated",
    "docs:build": "npm run docs:clean && npm run docs:generate"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@shipgirl/typedoc-plugin-versions": "^0.3.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "@types/ol-ext": "npm:@siedlerchr/types-ol-ext@^3.5.0",
    "@types/react": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@typhonjs-typedoc/typedoc-theme-dmt": "^0.4.0",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.3.3",
    "semantic-release": "^24.2.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typedoc": "^0.28.14",
    "typedoc-github-theme": "^0.3.1",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "ol": "^10.7.0",
    "ol-ext": "^4.0.23",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
