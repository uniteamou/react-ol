{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": ["**/*.test.ts", "**/*.test.tsx"],
  "exclude": ["node_modules", "lib"]
}
